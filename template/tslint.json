{
  "rules": {
    "curly": true,
    "no-arg": true,
    "no-conditional-assignment": true,
    "no-construct": true,
    "no-duplicate-variable": true,
    "no-eval": true,
    "no-for-in-array": true,
    "no-shadowed-variable": true,
    "no-unsafe-finally": true,
    "indent": [
      true,
      "spaces"
    ],
    "linebreak-style": [
      true,
      "LF"
    ],
    "no-trailing-whitespace": true,
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "space",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      },
      {
        "call-signature": "space",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator"
    ],
    "align": [
      true,
      "arguments",
      "parameters",
      "statements"
    ],
    "class-name": true,
    "new-parens": true,
    "no-consecutive-blank-lines": [
      true
    ],
    "one-variable-per-declaration": [
      true,
      "ignore-for-loop"
    ],
    "one-line": [
      true,
      "check-catch",
      "check-finally",
      "check-else",
      "check-open-brace",
      "check-whitespace"
    ],
    "quotemark": [
      true,
      "single",
      "avoid-escape",
      "jsx-double"
    ],
    "semicolon": [
      true,
      "always"
    ],
    "variable-name": [
      true,
      "ban-keywords"
    ]
  }
}
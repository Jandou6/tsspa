{
  "compilerOptions": {
    "allowJs": true,
    "experimentalDecorators": true,
    "target": "es6",
    "jsx": "react",
    "lib": ["dom", "es2015"],
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "strictFunctionTypes": false,
    "paths": {
      "src": ["./src"],
      "root": ["."]
    },
    "baseUrl": "./"
  },
  "include": [
    "./src/**/*",
  ],
}
